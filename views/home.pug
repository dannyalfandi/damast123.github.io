      section#hero.hero.section
        img(src="/img/background.jpg", alt="Hero background image", data-aos="fade-in")
        .container.text-center(data-aos="zoom-out", data-aos-delay="100")
          .row.justify-content-center
            .col-lg-8
              h2 Danny Alfandi
              p= t('home_page.description')
              a.btn-get-started(href="/about")= t('home_page.about_me', { defaultValue: 'About me' })
